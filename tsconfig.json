{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "ESNext",
    "lib": ["esnext", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types/"
  },
  "include": ["src/**/*", "test/**/*"]
}
