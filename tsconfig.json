{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "ESNext",
    "lib": ["esnext", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
